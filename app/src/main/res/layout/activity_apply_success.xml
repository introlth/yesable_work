<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="194dp"
        android:layout_height="79dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo" />

    <!-- 회원가입 완료 텍스트 -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewLogo"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="지원서 제출이 완료되었어요"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- 체크 아이콘 -->
    <ImageView
        android:id="@+id/imageViewCheck"
        android:layout_width="110dp"
        android:layout_height="113dp"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/check_icon" />

    <!-- 안내 텍스트 -->
    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="지원한 내역은 \n마이페이지>지원내역에서 확인할 수 있어요"
        android:textColor="#888888"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/button_list_return"
        style="@style/ButtonStyleColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#061720"
        android:gravity="center"
        android:padding="12dp"
        android:text="공고 목록으로 돌아가기"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
